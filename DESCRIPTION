Package: dpmsplit
Type: Package
Title: Disaggregate Inflows or Outflows
Version: 0.1.0
Date/Publication: 2025
Authors@R: 
    c(person(given = "Office for National Statistics", email = "demographic.methods@ons.gov.uk", role =c("aut","cre")),
      person(given = "John", family = "Bryant",role = "aut"),
	person("Rhosanna", "Ellum", role = "ctb"),
	person("Aidan", "Metcalfe", role = "ctb"),
	person("Andrew", "Taylor", role = "ctb"),
